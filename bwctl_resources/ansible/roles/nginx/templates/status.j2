server {
  listen 127.0.0.1:80;
  listen [::1]:80;
  server_name localhost;

  location / {
    return 204;
  }

  location /health {
    access_log	off;
    return	200 'OK. I am healthy.';
    add_header	Content-Type text/plain;
  }

  # Enable nginx status page
  location /nginx_status {
    stub_status on;
    access_log  off;
    allow       127.0.0.1;
    allow       ::1;
    deny        all;
  }
}
